<% include ../partials/header %>


<div class="container">
       <div>
            <h1 style="text-align:center ">Create A New Campground</h1>

            <div style="width: 40%;margin:25px auto;">

                <form action="/campgrounds" method="POST">

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" id="name" type="text" name="name" placeholder="name">
                    </div>


                    <div class="form-group">
                        <label for="image">Image's URL</label>
                        <input class="form-control" id="image" type="text" name="image" placeholder="Image Url">
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" type="text" name="description" placeholder="description"></textarea>
                    </div>

                    <div class="form-group">
                            <button class="btn btn-md btn-primary btn-block">Submit!!</button>
                    </div>


                </form>
                <a href="/campgrounds" class="btn btn-primary btn-sm">Go Back</a>

            </div>
       </div>
</div>


