
<% include ../partials/header%>


<div class="container">
    <header>
        <div class="jumbotron">
            <div class="container">
                <h1>Welcome To Campgrounds</h1>
                <p>Welcome to Our Site We have the best campgrounds all over the world.</p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">New Campground</a>
            </div>
        </div>
    </header>
    
    
    <div class="row" style="display: flex;flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
        <div class="col-sm-4">
            <div class="thumbnail">
                    <img src="<%= campground.image %>" style="width: 100%; height: 250px;">
                    <div class="caption" style="padding: 0;">
                        <h4 style="text-align: center;"><%= campground.name %></h4>
                        <p style="text-align: center;margin: 0;"><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Show Info</a></p>
                    </div>
            </div>
        </div>
        <% });%>
    </div>
    
</div>
<% include ../partials/footer %>