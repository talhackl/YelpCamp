<% include ../partials/header %>


<div class="container">
       <div>
            <h1 style="text-align:center "> <em>Edit  <%=campground.name%></em></h1>

            <div style="width: 40%;margin:25px auto;">

                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" id="name" type="text" name="name" value="<%=campground.name%>">
                    </div>


                    <div class="form-group">
                        <label for="image">Image's URL</label>
                        <input class="form-control" id="image" type="text" name="image" value="<%=campground.image%>">
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" type="text" name="description"><%=campground.description%></textarea>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-md btn-success">Edit</button>
                    </div>


                </form>
                <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary btn-sm">Go Back</a>

            </div>
       </div>
</div>


<% include ../partials/footer %>